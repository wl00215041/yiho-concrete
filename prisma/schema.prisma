// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
}

model AchievementYear {
  id              Int               @id @default(autoincrement())
  year            Int
  AchievementItem AchievementItem[]
}

model AchievementItem {
  id              Int             @id @default(autoincrement())
  name            String
  manufacturer    String
  created_at      String
  fk_year_id      Int
  achievementYear AchievementYear @relation(fields: [fk_year_id], references: [id], onDelete: Cascade)
}

model AchievementGalleryYear {
  id                 Int                  @id @default(autoincrement())
  year               Int
  AchievementGallery AchievementGallery[]
}

model AchievementGallery {
  id           Int                        @id @default(autoincrement())
  name         String
  location     String
  product      String
  finishedDate String
  created_at   String
  fk_year_id   Int
  year         AchievementGalleryYear     @relation(fields: [fk_year_id], references: [id], onDelete: Cascade)
  images       AchievementGalleryImages[]
}

model AchievementGalleryImages {
  id            Int                @id @default(autoincrement())
  file          String
  is_cover      Boolean
  created_at    String
  fk_gallery_id Int
  gallery       AchievementGallery @relation(fields: [fk_gallery_id], references: [id], onDelete: Cascade)
}

model Certifications {
  id         Int     @id @default(autoincrement())
  name       String
  file       String?
  type       String
  created_at String
  updated_at String  @default("")
}

model Jobs {
  id         Int     @id @default(autoincrement())
  name       String
  experience String
  education  String
  link       String?
  updated_at String
  created_at String
}

model Products {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  created_at  String
}

model News {
  id         Int    @id @default(autoincrement())
  title      String
  link       String
  created_at String
}
